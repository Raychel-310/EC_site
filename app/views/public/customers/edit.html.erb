<h2>会員情報編集</h2>


<%= form_with model: current_customer, url: customers_information_path, method: :patch do |f| %>

  <div class="field">
    <%= f.label :lastname_kanji %><br />
    <%= f.text_field :lastname_kanji, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :firstname_kanji %><br />
    <%= f.text_field :firstname_kanji, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :lastname_kana %><br />
    <%= f.text_field :lastname_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :firstname_kana %><br />
    <%= f.text_field :firstname_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :post_code %><br />
    <%= f.text_field :post_code, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<%= f.submit "update" %>
<%= link_to "退会する", customers_check_path %>

<% end %>
