<h2>会員情報編集</h2>


<%= form_with model: current_customer, url: customers_information_path, method: :patch do |f| %>

  <div class="field">
    <%= f.label :lastname_kanji, class: "col-sm-3 control-label", style: "margin: 10px;" %><br />
    <%= f.text_field :lastname_kanji, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :firstname_kanji, style: "margin: 10px;" %><br />
    <%= f.text_field :firstname_kanji, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :lastname_kana, style: "margin: 10px;" %><br />
    <%= f.text_field :lastname_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :firstname_kana, style: "margin: 10px;" %><br />
    <%= f.text_field :firstname_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :post_code, style: "margin: 10px;" %><br />
    <%= f.text_field :post_code, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :address, style: "margin: 10px;" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :phone_number, style: "margin: 10px;" %><br />
    <%= f.text_field :phone_number, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email, style: "margin: 10px;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<%= f.submit "update", class: "btn btn-primary" %>
<%= link_to "退会する", customers_check_path, class: "btn btn-danger" %>

<% end %>
