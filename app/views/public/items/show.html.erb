<p>エンドユーザ#商品詳細</p>

<%= form_with model: @cart_item, url: cart_items_path do |f| %>

<div>
  <% if @item.image.attached? %>
  <%= image_tag @item.image, size: "200x200" %>
  <% else %>
  <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
</div>

<h4>商品名</h4>
<div>
  <%= @item.name %>
</div>

<h4>商品説明</h4>
<div>
  <%= @item.explanation %>
</div>

<h4>税込価格</h4>
<div>
  <%= ((@item.tax_excluded_price)*1.1).round %>円
</div>


  <h4><%= f.label :個数選択 %></h4>
  <%= f.collection_select :amount, 1..10, :to_i, :to_i, prompt: '選択してください' %>

  <%= f.hidden_field :item_id, value: @item.id %>

  <%= f.submit 'カートに入れる', class: "btn btn-primary", style: "margin-left:70%;" %>
<% end %>

