<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>

<table class="table table-hover table-inverse">
  <tr>
  <th>ジャンル</th>
  <th></th>
  <th colspan="3"></th>
  </tr>

  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to edit_admin_genre_path(genre) do %>編集する<% end %></td>
  </tr>
  <% end %>

</table>
  
<% end %>
