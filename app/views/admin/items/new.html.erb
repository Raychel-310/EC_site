<h1>管理者#商品登録</h1>

<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path(@item), method: :post, local: true do |f| %>
  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :explanation %>
  <h4>税抜価格</h4>
  <%= f.text_field :tax_excluded_price %>
  <h4><%= f.label :ジャンル %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %></h4>
  <h4><%= f.label :販売ステータス %>
  <%= f.select :is_sale, ["販売中", "販売停止"] ,class: "btn btn-primary"%></h4>
  <%= f.submit '新規登録' %>
<% end %>