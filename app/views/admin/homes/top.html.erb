<h2>注文履歴一覧</h2>

  <table>
      <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th></th>
    </tr>
    <% @order.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.customer.lastname_kanji + order.customer.firstname_kanji %></td>
      <td><%= order.order_details.sum(:quantity) %></td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "注文詳細", admin_order_path(order), class:"btn btn-primary" %></td>
    </tr>
    <% end %>
  </table>
  <%#= paginate @order %>
</div>
